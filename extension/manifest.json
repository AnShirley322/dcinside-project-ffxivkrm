{
  "manifest_version": 3,
  "name": "DCInside FFXIVKR 이미지 자동삽입기",
  "version": "1.1.0",
  "description": "gall.dcinside.com/mgallery/board/write 에서 <이미지:키워드>를 <img>로 자동 변환",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://gall.dcinside.com/mgallery/board/write/*",
    "http://gall.dcinside.com/mgallery/board/write/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gall.dcinside.com/mgallery/board/write/*",
        "http://gall.dcinside.com/mgallery/board/write/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}

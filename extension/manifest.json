    "https://gall.dcinside.com/mgallery/board/write/*",
    "https://gall.dcinside.com/mgallery/board/modify/*",
    "http://gall.dcinside.com/mgallery/board/write/*",
    "http://gall.dcinside.com/mgallery/board/modify/*",

    "https://gall.dcinside.com/board/write/*",
    "https://gall.dcinside.com/board/modify/*",
    "http://gall.dcinside.com/board/write/*",
    "http://gall.dcinside.com/board/modify/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gall.dcinside.com/mgallery/board/write/*",
        "https://gall.dcinside.com/mgallery/board/modify/*",
        "http://gall.dcinside.com/mgallery/board/write/*",
        "http://gall.dcinside.com/mgallery/board/modify/*",

        "https://gall.dcinside.com/board/write/*",
        "https://gall.dcinside.com/board/modify/*",
        "http://gall.dcinside.com/board/write/*",
        "http://gall.dcinside.com/board/modify/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
